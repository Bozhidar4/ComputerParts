@model IEnumerable<ComputerParts.Models.Motherboard>

@{
    ViewBag.Title = "Motherboards";
}

<h2>Motherboards</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Information)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Image == null)
            {
                item.Image = "https://s5emagst.akamaized.net/products/559/558617/images/res_56ab6feedbfae6dea461c4cd27a7f789_450x450_3d9l.jpg";
            }
            <img src="@Url.Content(item.Image)" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Information)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.MotherboardId }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.MotherboardId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MotherboardId })
        </td>
    </tr>
}

</table>
<div class="button-holder">
    <p class="button btn btn-info">
        @Html.ActionLink("Create New", "Create")
    </p>
    <a class="button btn btn-primary" href="Cases">Start Over</a>
    <a class="button btn btn-primary" href="Cases">Go Back</a>
    <a class="button btn btn-primary" href="CPUs">Next Step</a>
</div>

<div class="container">
    <h2>Step 2</h2>
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:20%">
            20%
        </div>
    </div>
</div>