@model IEnumerable<ComputerParts.Models.CPU>

@{
    ViewBag.Title = "CPUs";
}

<h2>Central Processor Units CPUs</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Information)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Image == null)
            {
                item.Image = "http://www.digital.bg/f/logo/390/860_41c6514943a20ee12fb199b666ef21bc.jpg";
            }
            <img src="@Url.Content(item.Image)" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Information)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.CPUId }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.CPUId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CPUId })
        </td>
    </tr>
}

</table>
<div class="button-holder">
    <p class="button btn btn-info">
        @Html.ActionLink("Create New", "Create")
    </p>
    <a class="button btn btn-primary" href="Cases">Start Over</a>
    <a class="button btn btn-primary" href="Motherboards">Go Back</a>
    <a class="button btn btn-primary" href="RAMs">Next Step</a>
</div>

<div class="container">
    <h2>Step 3</h2>
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:30%">
            30%
        </div>
    </div>
</div>