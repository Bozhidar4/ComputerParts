@model IEnumerable<ComputerParts.Models.HDD>

@{
    ViewBag.Title = "HDDs";
}

<h2>Hard Disk Drives HDDs</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Information)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Image == null)
            {
                item.Image = "http://kokix.com/wp-content/uploads/2017/02/hdd-disk.jpg";
            }
            <img src="@Url.Content(item.Image)" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Information)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.HDDId }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.HDDId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.HDDId })
        </td>
    </tr>
}

</table>
<div class="button-holder">
    <p class="button btn btn-info">
        @Html.ActionLink("Create New", "Create")
    </p>
    <a class="button btn btn-primary" href="Cases">Start Over</a>
    <a class="button btn btn-primary" href="GPUs">Go Back</a>
    <a class="button btn btn-primary" href="SSDs">Next Step</a>
</div>
<div class="container">
    <h2>Step 6</h2>
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:60%">
            60%
        </div>
    </div>
</div>