@model IEnumerable<ComputerParts.Models.GPU>

@{
    ViewBag.Title = "Graphics Cards";
}

<h2>Graphics Cards</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Information)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Image == null)
            {
                item.Image = "https://p.jarcomputers.com/680x680/VCRGBYTEGVN7302GI_680x680.jpg";
            }
            <img src="@Url.Content(item.Image)" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Information)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.GPUId }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.GPUId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GPUId })
        </td>
    </tr>
}

</table>
<div class="button-holder">
    <p class="button btn btn-info">
        @Html.ActionLink("Create New", "Create")
    </p>
    <a class="button btn btn-primary" href="Cases">Start Over</a>
    <a class="button btn btn-primary" href="RAMs">Go Back</a>
    <a class="button btn btn-primary" href="HDDs">Next Step</a>
</div>
<div class="container">
    <h2>Step 5</h2>
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:50%">
            50%
        </div>
    </div>
</div>